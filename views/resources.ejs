<script>


  const classesValue = localStorage.getItem('classes');
  document.getElementById("text").innerHTML = "Resources for: " + classesValue;

  const test = [localStorage.getItem('classes')];
  for (let i = 0; i < test.length; i++) {
      console.log(test[i]);
      addElement(test[i]);
  }

  function addElement(string) {
  // create a new div element
  const newDiv = document.createElement("div");
  newDiv.className = "container";


  // add the newly created element and its content into the DOM
  const currentDiv = document.getElementById("div1");
  document.body.insertBefore(newDiv, currentDiv);

  const image = document.createElement("img");
  newDiv.appendChild(image);

  const description = document.createElement("p");
    //second resource
  const newDiv2 = document.createElement("div");
  newDiv2.className = "container";

  const currentDiv2 = document.getElementById("div");
  document.body.insertBefore(newDiv2, currentDiv2);

  const image2 = document.createElement("img");
  newDiv2.appendChild(image2);

  const description2 = document.createElement("p");

  if (string === "AP US History") {
    image.src = "heimler.jpg";
    image.height = 250;
    const apushDescription = document.createTextNode("Heimler's History is a great YouTube channel that has videos on every APUSH unit!");
    description.appendChild(apushDescription);
    newDiv.appendChild(description);

    image2.src = "princeton.jpg";
    image2.height = 250;
    const apushDescription2 = document.createTextNode("The APUSH Princeton Prep Book is a great resource that has infomation and lessons on all units and practice test!");
    description2.appendChild(apushDescription2);
    newDiv2.appendChild(description2);
  } else if (string === "AP Computer Science Principles") {
    image.src = "khan.png";
    image.height = 250;
    const cspDescription = document.createTextNode("Khan Academy has a whole review section dedicated to AP CSP. It includes lessons and questions on every unit.");
    description.appendChild(cspDescription);
    newDiv.appendChild(description);

    image2.src = "barron.jpg";
    image2.height = 250;
    const cspDescription2 = document.createTextNode("The AP CSP Barron review book is a great resource that has infomation and lessons on all units and practice tests!");
    description2.appendChild(cspDescription2);
    newDiv2.appendChild(description2);
  }
}

</script>
